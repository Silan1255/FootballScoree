<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".FragmentBottomSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/edt_custom1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tahmin_first"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/yrsa_semibold"
                android:gravity="center"
                android:text="Galatasaray"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/first_tahmin"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/edt_custom"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/deneme2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="60dp" />

                <EditText
                    android:id="@+id/secound_tahmin"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edt_custom"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tahmin_secound"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/yrsa_semibold"
                android:gravity="center"
                android:text="Fenerbahçe"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/skor_tahmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/edt_custom"
            android:fontFamily="@font/yrsa_semibold"
            android:text="TAHMİN YAP"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>